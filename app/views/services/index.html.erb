<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<table>
  <thead>
    <tr>
      <th>Service name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
    <tr>
      <td><%= service.service_name %></td>
      <td><%= service.description %></td>
      <td><%= service.price %></td>
      <td><%= service.location %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
  <% if service_provider_signed_in? %>
  <%= link_to 'New Service', new_service_path %>
  <% else %>
  <a href="/service_providers/sign_in">Sign In</a> to add your services today!
   <% end %>
 </div>